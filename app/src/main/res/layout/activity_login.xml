<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/background">

    <TextView
        android:id="@+id/headLogin"
        android:text="@string/forgetful_coder"
        android:fontFamily="@font/franklingothicheavy"
        android:textSize="30sp"
        android:background="@color/topbar"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/usernameLog"
        android:text="@string/username"
        android:textColor="@color/white"
        android:layout_below="@+id/headLogin"
        android:background="@drawable/username_button_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/franklingothicheavy"
        android:textSize="25dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="70dp"
        />


    <EditText
        android:id="@+id/passwordLog"
        android:text="@string/password"
        android:textColor="@color/white"
        android:layout_below="@+id/usernameLog"
        android:background="@drawable/username_button_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/franklingothicheavy"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="70dp"
        />


    <Button
        android:id="@+id/registerBtn"
        android:layout_below="@+id/passwordLog"
        android:layout_marginTop="60dp"
        android:text="@string/login"
        android:fontFamily="@font/franklingothicheavy"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/login_register_button_color"
        android:paddingHorizontal="60dp"/>




</RelativeLayout>